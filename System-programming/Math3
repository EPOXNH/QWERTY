//задача на математику 3
double r, c, s; 
 Console.Write("Введите Радиус окружности:"); 
 r = Convert.ToDouble(Console.ReadLine()); 
 c = 2 * Math.PI * r; 
 s = Math.PI * Math.Pow(r, 2); 
 Console.WriteLine("Длина откружности равна - " + Math.Round(c, 2) + "см"); 
 Console.WriteLine("Площадь круга равна - " + Math.Round(s, 2) + "см2"); 
 Console.ReadKey();
