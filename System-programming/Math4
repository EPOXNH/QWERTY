//задача на математику 4
int x, x1, x2, x3, x4, y; 
 Console.Write("Введите четырехзначное число: "); 
 x = Convert.ToInt32(Console.ReadLine()); 
 x1 = x / 1000; 
 x2 = x / 100; 
 x2 = x2 % 10; 
 x3 = x % 100; 
 x3 = x3 / 10; 
 x4 = x % 10; 
 y = x1 * x2 * x3 * x4; 
 Console.WriteLine("Произведение цифр в числе " + x + " = " + y); 
 Console.ReadKey();
