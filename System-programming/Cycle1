//Задача на циклы 1
int i = 1;
double km = 10, s=0;
Console.WriteLine("СТАТИСТИКА ТРЕНЕРОВОК");
Console.WriteLine("________________________________________________________________________________________________________________________");
do
{
Console.WriteLine(i + " день - " + Math.Round(km, 2) + "км");
km = km + km * 0.1;
s = s + km;
i++;
}
while (i < 8);
Console.WriteLine("________________________________________________________________________________________________________________________");
Console.WriteLine("ВСЕГО - " + Math.Round(s, 2) + "км");
Console.ReadKey();
